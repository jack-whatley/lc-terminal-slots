{
	 "tasks": [
			{
				"name": "dotnet clean",
				"group": "pre-commit",
				"command": "dotnet",
				"args": [ "clean" ]
			},
			{
				"name": "dotnet format",
				"group": "pre-commit",
				"command": "dotnet",
				"args": [ "format", "--include", "${staged}" ],
				"include": [ "**/*.cs" ]
			},
			{
				"name": "dotnet build",
				"group": "pre-commit",
				"command": "dotnet",
				"args": [ "build" ]
			},
			{
				"name": "dotnet test",
				"group": "pre-commit",
				"command": "dotnet",
				"args": [ "test" ]
			}
	 ]
}
